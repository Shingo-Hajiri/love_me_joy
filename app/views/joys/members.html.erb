    </div>
    <div class='mt-5 mx-5'>
      <%= image_tag('comingsoon3.png', class: 'w-28 h-40 rounded-lg my-0 mx-auto') %>
      <p class='pt-2'>山野 愛月</p>
    </div>
  </div>
  <div class='text-center py-10'>
    <%= link_to root_path, id:"back-to-top" do %>
      <button class="btn bg-yellow-300 border-none w-32 text-white tracking-[.25em] hover:bg-yellow-200 hover:opacity-50">TOPに戻る</button>
    <% end %>
  </div>
</main>

<script>
  document.addEventListener("turbo:load", () => {
    if (window.location.pathname === '<%= joy_members_path %>') {
      if (!window.audio) {
        audio = new Audio('<%= asset_path("maou_14_shining_star.mp3") %>');
        audio.loop = true;
      }
      window.audio.play().catch(error => console.log(error));
    }
  });

  document.getElementById('back-to-top').addEventListener('click', (event) => {
    if (audio) {
      audio.pause();
      audio.currentTime = 0;
      audio = null; // 完全にリセット
    }
  });
</script>


